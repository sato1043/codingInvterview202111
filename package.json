{
  "name": "codingInvterview202111",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "run-p next:dev pathpida:watch",
    "next:dev": "next dev",
    "pathpida": "pathpida",
    "pathpida:watch": "pathpida --watch",
    "pre:build": "rimraf .next out && pathpida",
    "pre:push": "run-s pre:build pathpida prettier tslint eslint test",
    "prettier": "prettier --list-different --write .",
    "tslint": "tsc -p . --noEmit",
    "eslint": "eslint .",
    "test": "jest",
    "build": "npm run pre:build && next build && next export"
  },
  "dependencies": {
    "@types/validator": "^13.6.3",
    "axios": "^0.21.1",
    "dayjs": "^1.10.5",
    "lodash": "^4.17.21",
    "next": "10.2.0",
    "next-router-mock": "^0.6.1",
    "react": "^17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.15.1",
    "sass": "^1.35.1",
    "typescript-fsa": "^3.0.0",
    "typescript-fsa-reducers": "^1.2.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^5.1.2",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.3.0",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@typescript-eslint/typescript-estree": "^5.3.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8",
    "jest-mock-axios": "^4.4.0",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.15.2",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.2.0",
    "typescript": "^4.2.4",
    "typescript-eslint-language-service": "^4.1.5"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "src/utils/$path.ts",
      "out"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx",
          "*.js"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "sourceType": "module",
          "ecmaFeatures": {
            "jsx": true
          }
        },
        "plugins": [
          "@typescript-eslint",
          "react",
          "react-hooks"
        ],
        "rules": {
          "no-dupe-class-members": 0,
          "spaced-comment": [
            2,
            "always",
            {
              "line": {
                "markers": [
                  "/"
                ]
              },
              "block": {
                "balanced": true
              }
            }
          ],
          "no-extra-boolean-cast": 0,
          "no-unused-vars": 0,
          "@typescript-eslint/no-unused-vars": [
            "error"
          ],
          "no-array-constructor": 0,
          "@typescript-eslint/no-array-constructor": 2,
          "@typescript-eslint/adjacent-overload-signatures": 2,
          "@typescript-eslint/no-namespace": [
            2,
            {
              "allowDeclarations": true
            }
          ],
          "@typescript-eslint/prefer-namespace-keyword": 2,
          "@typescript-eslint/no-var-requires": 2,
          "@typescript-eslint/no-empty-interface": 0,
          "@typescript-eslint/no-explicit-any": 0,
          "@typescript-eslint/explicit-module-boundary-types": 2,
          "react/jsx-no-target-blank": "error",
          "react/jsx-uses-react": [
            1
          ],
          "react/prop-types": 0,
          "react-hooks/rules-of-hooks": "error",
          "react-hooks/exhaustive-deps": "error"
        },
        "settings": {
          "node": {
            "tryExtensions": [
              ".ts",
              ".tsx",
              ".js",
              ".jsx",
              ".json",
              ".node"
            ]
          },
          "react": {
            "version": "detect"
          }
        }
      }
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    },
    "globalSetup": "<rootDir>/__tests__/setupEnv.ts",
    "setupFiles": [
      "jest-date-mock"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/setup*.(js|tsx?)*",
      "<rootDir>/__tests__/fixtures.ts",
      "<rootDir>/__tests__/mocks/*.(js|tsx?)*"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(scss|css)$": "<rootDir>/__mocks__/styleMock.ts"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  }
}
